<div class="container-fluid">
    <div class="home-heading text-center row">
      <div class="home-heading-wrapper">
        <h1>Art</h1>
        <p>Buy and Sell</p>
      </div>
    </div>
  </div>

  <div class="artworks-row row">
      <h3 class="text-center">You may be interested in...</h3>
      <% artworks.forEach((artwork) => { %>
        <div class="col-sm-3 home-artwork-box">
          <img src="<%= artwork.picturePath %>" alt="<%= artwork.originalName %>">
          <div class="artwork-info-wrapper">
            <a class="title" href="/artwork/<%= artwork._id %>">
              <strong><%= artwork.title %></strong>
            </a><br>
            by <span class="light-text"><%= artwork._creator.username %></span>
            <span class="light-text description"><%= artwork.description %></span>
          </div>
        </div>
      <%  }) %>
    </div>