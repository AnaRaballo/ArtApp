<div class="container">
        <div class="row">
          <div class="col-sm-6 centered-form">
            <form action="/artwork/<%= artwork._id %>" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <label for="title">Title</label>
                <input type="text" name="title" class="form-control" value="<%= artwork.title %>">
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <textarea
                  id="description"
                  name="description"
                  class="form-control">
                  <%= artwork.description %>
                </textarea>
              </div>
              <section>
                  <p>Upload your photo</p>
                    <input type="file" name="photo">
                </section>
                <br>
              <div class="form-group">
                <button type="submit">Update Gallery</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <% if (typeof(errors) !== 'undefined'){ %>
        <div class="alert alert-danger">
        <ul>
          <% for (let error in errors){ %>
            <li><%= errors[error].message %></li>
          <% } %>
        </ul>
        </div>
      <% } %>